{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": "./app",
    "types": [
      "core-js",
      "hammerjs",
      "jasmine",
      "jwt-simple",
      "lodash",
      "node",
      "restify",
      "source-map",
      "uglify-js",
      "webpack",
      "yargs"
    ]
  },
  "exclude": [
    "node_modules",
    "bower_components"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
